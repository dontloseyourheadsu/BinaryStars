@inherits LayoutComponentBase
<div class="d-flex flex-column vh-100">
    <!-- ① El checkbox controla el estado (checked = nav visible) -->
    <input id="nav-toggle" class="nav-toggle" type="checkbox" />
    <div class="d-flex">
        <!-- ② Barra superior -->
        <div class="top-row">
            <!-- Label = botón hamburger personalizado sin borde -->
            <label class="sidebar-toggle"
                   for="nav-toggle">
                <div class="hamburger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </label>
            <div class="app-title">Device Management</div>
        </div>
        <!-- ③ Contenedor principal -->
        <div class="page">
            <div class="sidebar">
                <nav>
                    <div class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <span class="nav-icon">•</span> Home
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link" href="device-discovery">
                            <span class="nav-icon">•</span> Device Discovery
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link" href="connected-devices">
                            <span class="nav-icon">•</span> Connected Devices
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link" href="file-transfer">
                            <span class="nav-icon">•</span> File Transfer
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link" href="monitor">
                            <span class="nav-icon">•</span> Monitor
                        </NavLink>
                    </div>
                    <div class="nav-item">
                        <NavLink class="nav-link" href="remote-control">
                            <span class="nav-icon">•</span> Remote Control
                        </NavLink>
                    </div>
                </nav>
            </div>
            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </div>
</div>