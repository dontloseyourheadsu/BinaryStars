@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="d-flex flex-column vh-100">
    <input id="nav-toggle" class="nav-toggle" type="checkbox" />
    <div class="d-flex">
        <div class="top-row">
            <label class="sidebar-toggle" for="nav-toggle">
                <div class="hamburger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </label>
            <div class="app-title">Device Management</div>
        </div>

        <div class="page">
            <div class="sidebar">
                <nav>
                    <div class="nav-item" @onclick="@(() => NavigateTo("/"))">
                        <div class="nav-link">
                            <span class="nav-icon">•</span> Home
                        </div>
                    </div>
                    <div class="nav-item" @onclick="@(() => NavigateTo("/device-discovery"))">
                        <div class="nav-link">
                            <span class="nav-icon">•</span> Device Discovery
                        </div>
                    </div>
                    <div class="nav-item" @onclick="@(() => NavigateTo("/file-transfer"))">
                        <div class="nav-link">
                            <span class="nav-icon">•</span> File Transfer
                        </div>
                    </div>
                    <div class="nav-item" @onclick="@(() => NavigateTo("/monitor"))">
                        <div class="nav-link">
                            <span class="nav-icon">•</span> Monitor
                        </div>
                    </div>
                    <div class="nav-item" @onclick="@(() => NavigateTo("/remote-control"))">
                        <div class="nav-link">
                            <span class="nav-icon">•</span> Remote Control
                        </div>
                    </div>
                </nav>
            </div>

            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </div>
</div>

@code {
    void NavigateTo(string url)
    {
        NavigationManager.NavigateTo(url);
    }
}
