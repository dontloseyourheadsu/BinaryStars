<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/carbon_bg_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/carbon_bg_panel"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Menu"
            android:src="@drawable/ic_menu"
            app:tint="@color/carbon_text_muted" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Messaging"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/carbon_text_main" />

        <Button
            android:id="@+id/btnNewChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:backgroundTint="@color/primary_purple"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/carbon_border" />

    <ProgressBar
        android:id="@+id/pbMessagingLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvMessagingEmptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No chats yet. Start one to send a message."
        android:textSize="16sp"
        android:textColor="@color/carbon_text_muted"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
