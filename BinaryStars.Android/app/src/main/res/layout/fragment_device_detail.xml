<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/carbon_bg_app"
    android:clickable="true"
    android:focusable="true">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/carbon_bg_panel"
        app:layout_constraintTop_toTopOf="parent">
        
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_right"
            android:rotation="180"
            android:padding="16dp"
            app:tint="@color/carbon_text_muted"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Detail"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/carbon_text_main"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/carbon_border"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Status Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/carbon_text_muted"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:paddingHorizontal="12dp">

                <!-- Usage of <include> or manual card creation for simplicity -->
                <!-- Card 1 CPU -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@color/carbon_bg_panel"
                    android:padding="12dp"
                    android:layout_margin="4dp">
                    <TextView
                        android:text="CPU Load"
                        android:textSize="12sp"
                        android:textColor="@color/carbon_text_muted"/>
                    <TextView
                        android:id="@+id/tvCpu"
                        android:text="12%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/carbon_text_main"/>
                </LinearLayout>

                <!-- Card 2 RAM -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@color/carbon_bg_panel"
                    android:padding="12dp"
                    android:layout_margin="4dp">
                    <TextView
                        android:text="RAM Usage"
                        android:textSize="12sp"
                        android:textColor="@color/carbon_text_muted"/>
                    <TextView
                        android:id="@+id/tvRam"
                        android:text="4.2 GB"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/carbon_text_main"/>
                </LinearLayout>

                <!-- Card 3 Up -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@color/carbon_bg_panel"
                    android:padding="12dp"
                    android:layout_margin="4dp">
                    <TextView
                        android:text="Up Speed"
                        android:textSize="12sp"
                        android:textColor="@color/carbon_text_muted"/>
                    <TextView
                        android:id="@+id/tvUpSpeed"
                        android:text="1.2 MB/s"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/carbon_text_main"/>
                </LinearLayout>

                <!-- Card 4 Down -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@color/carbon_bg_panel"
                    android:padding="12dp"
                    android:layout_margin="4dp">
                    <TextView
                        android:text="Down Speed"
                        android:textSize="12sp"
                        android:textColor="@color/carbon_text_muted"/>
                    <TextView
                        android:id="@+id/tvDownSpeed"
                        android:text="5.4 MB/s"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/carbon_text_main"/>
                </LinearLayout>

                 <!-- Card 5 Uptime -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@color/carbon_bg_panel"
                    android:padding="12dp"
                    android:layout_margin="4dp">
                    <TextView
                        android:text="Uptime"
                        android:textSize="12sp"
                        android:textColor="@color/carbon_text_muted"/>
                    <TextView
                        android:id="@+id/tvUptime"
                        android:text="4d 2h"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/carbon_text_main"/>
                </LinearLayout>
                
                 <!-- Card 6 Battery -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@color/carbon_bg_panel"
                    android:padding="12dp"
                    android:layout_margin="4dp">
                    <TextView
                        android:text="Battery"
                        android:textSize="12sp"
                        android:textColor="@color/carbon_text_muted"/>
                    <TextView
                        android:id="@+id/tvBattery"
                        android:text="85%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/carbon_text_main"/>
                </LinearLayout>

            </GridLayout>

            <!-- Location Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/carbon_text_muted"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"/>

            <!-- List Item 1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/carbon_bg_panel"
                android:padding="16dp">
                
                <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toStartOf="@id/toggleShare"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent">
                     
                     <TextView
                         android:text="Share my location"
                         android:textSize="16sp"
                         android:textColor="@color/carbon_text_main"/>
                     <TextView
                         android:text="Allow this device to see me"
                         android:textSize="13sp"
                         android:textColor="@color/carbon_text_muted"/>
                </LinearLayout>

                <Switch
                    android:id="@+id/toggleShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                     
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/carbon_border"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- List Item 2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnLocate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/carbon_bg_panel"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">
                
                <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent">
                     
                     <TextView
                         android:text="Locate Device"
                         android:textSize="16sp"
                         android:textColor="@color/carbon_text_main"/>
                     <TextView
                         android:text="View on Map tab"
                         android:textSize="13sp"
                         android:textColor="@color/carbon_text_muted"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_map"
                    app:tint="@color/carbon_text_muted"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                     
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>