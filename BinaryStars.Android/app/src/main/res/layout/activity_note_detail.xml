<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/carbon_bg_app">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/carbon_bg_panel"
        app:titleTextColor="@color/carbon_text_main" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/carbon_border" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp">

            <!-- Note Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/carbon_bg_panel"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvNoteName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/carbon_text_main" />

                <TextView
                    android:id="@+id/tvDeviceInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/carbon_text_muted"
                    android:paddingTop="8dp" />

                <TextView
                    android:id="@+id/tvTimestamps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/carbon_text_muted"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <!-- Device Change Button -->
            <Button
                android:id="@+id/btnEditDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Re-sign with Different Device"
                android:backgroundTint="@color/primary_purple"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp" />

            <!-- Content Editor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/carbon_text_muted"
                android:paddingTop="16dp"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/etNoteContent"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/carbon_bg_panel"
                android:padding="12dp"
                android:gravity="top"
                android:textSize="14sp"
                android:textColor="@color/carbon_text_main" />

        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:backgroundTint="@color/primary_purple"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
