<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_bg_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_computer"
            android:padding="12dp"
            android:background="@drawable/bg_icon_laptop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/ivIcon"
            app:layout_constraintTop_toTopOf="@id/ivIcon" />

        <View
            android:id="@+id/vStatusDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/shape_status_dot"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toStartOf="@id/tvName" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connected"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/vStatusDot"
            app:layout_constraintBottom_toBottomOf="@id/vStatusDot"
            app:layout_constraintTop_toTopOf="@id/vStatusDot" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A090040"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivIcon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/vDivider">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"/>
                <TextView
                    android:id="@+id/tvBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87%"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IP Address"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"/>
                <TextView
                    android:id="@+id/tvIp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="192.168.1.5"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Up/Down"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"/>
                <TextView
                    android:id="@+id/tvUpDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/450 Kbps"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>